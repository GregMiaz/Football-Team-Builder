@page
@model FTB.Web.Pages.Teams.AllTeamsModel
@{
    ViewData["Title"] = "AllTeams";
}

<br />
<br />

<div class="form-group row">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Team</th>
                <th>Crest</th>
                <th>Nationality</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var team in Model.Teams)
            {
            <tr>
                <th><a asp-page="/Teams/Details" asp-route-id="@(team.Id)">@team.Name</a></th>
                <th><img src="@team.TeamLogo" width="40" /></th>
                <th>@team.Nationality</th>

            </tr>

            }
        </tbody>
    </table>
</div>