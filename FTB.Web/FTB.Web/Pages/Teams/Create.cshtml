@page
@model FTB.Web.Pages.Teams.CreateModel
@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form method="post">

    <div class="form-group row">
        <label asp-for="Name" class="col-sm-1 col-form-label"></label>

        <div class="col-sm-3">
            <input asp-for="Name" class="form-control">
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Nationality" class="col-sm-1 col-form-label"></label>

        <div class="col-sm-3">
            <input asp-for="Nationality" class="form-control">
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="League" class="col-sm-1 col-form-label"></label>

        <div class="col-sm-3">
            <input asp-for="League" class="form-control">
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="TeamLogo" class="col-sm-1 col-form-label"></label>

        <div class="col-sm-3">
            <input asp-for="TeamLogo" class="form-control">
        </div>
    </div>



    <div class="form-group row">

        <div class="col-sm-2">
            <input type="submit" class="btn btn-success" value="Create team">
        </div>
    </div>

</form>

